<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp">
    <!--提醒类型-->
    <LinearLayout
        android:id="@id/alarm_sport"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@id/alarm_button_type"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/alarm_type"
            android:gravity="center"
            android:background="@drawable/btn_red_bg"
            android:textColor="@color/loading_error_btn_stroke_color"
            android:textSize="15sp"
            android:clickable="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/jiantou"/>
    </LinearLayout>
    <!--提醒类型-->
    <!--提醒时间-->
    <LinearLayout
        android:id="@id/alarm_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@id/alarm_button_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/btn_red_bg"
            android:text="@string/alarm_time"
            android:textColor="@color/loading_error_btn_stroke_color"
            android:textSize="15sp"
            android:clickable="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/jiantou"/>
    </LinearLayout>
    <!--提醒时间-->
    <!--提醒间隔-->
    <LinearLayout
        android:id="@id/alarm_middle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@id/alarm_button_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_middle"
            android:textColor="@color/loading_error_btn_stroke_color"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:background="@drawable/btn_red_bg"
            android:clickable="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/jiantou"/>
    </LinearLayout>
    <!--提醒间隔-->



</LinearLayout>